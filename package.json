{
  "name": "@limechain/local-hedera",
  "version": "1.0.0",
  "description": "Developer tooling for running Local Hedera Network (Consensus + Mirror Nodes).",
  "homepage": "https://github.com/LimeChain/local-hedera",
  "repository": "github:LimeChain/local-hedera",
  "author": "LimeChain",
  "license": "MIT",
  "main": "internal/index.js",
  "types": "internal/index.d.ts",
  "keywords": [
    "hedera"
  ],
  "scripts": {
    "lint": "yarn node_modules/.bin/prettier --check && yarn eslint",
    "lint:fix": "yarn node_modules/.bin/prettier --write && yarn eslint --fix",
    "eslint": "node_modules/.bin/eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "node_modules/.bin/prettier \\\"**/*.{js,md,json}\\\"",
    "test": "node_modules/.bin/mocha --recursive \\\"test/**/*.ts\\\" --exit",
    "build": "npm run clean && node_modules/.bin/tsc --build .",
    "clean": "node_modules/.bin/rimraf dist internal types *.{d.ts,js}{,.map} build-test tsconfig.tsbuildinfo",
    "postinstall": "git clone git@github.com:hashgraph/hedera-network-e2e.git && cd hedera-network-e2e && git reset --hard HEAD && sed -i 's/JAVA_OPTS/#JAVA_OPTS/' .env && docker-compose build && docker-compose up -d  "
  },
  "bin": {
    "local-hedera": "./cli.js"
  },
  "files": [
    "dist/src/",
    "src/",
    "internal/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@hashgraph/hethers": "^1.0.3",
    "@hashgraph/sdk": "2.7.0-beta.4",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "chai": "^4.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-prettier": "3.4.0",
    "mocha": "^7.2.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^8.1.0",
    "typescript": "~4.5.2"
  }
}
